<h1>Books</h1>
<table>
  <tbody>
    <!--テーブル上部の記述-->
    <thead>
      <tr>
      <th>title</th>
      <th>body</th>
      <th colspan ="3"></th>
      </tr>
    </thead>
<!--投稿一覧を表示する-->
<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><a class="show" href="/books/">Show</a></td>
    <td><a class="edit" href = "books/edit" >Edit</a></td>
    <td><a class="destroy" rel ="nofollow" data-method= "delete"  method="delete"  href="/books/">Destroy</a></td>
  </tr>
  
<% end %>
  </thead>
 </tbody>
</table>
<!--投稿機能-->
<h2>New book</h2>
<% if @book.errors.any? %>
 <%= @book.errors.count %>件のエラーが発生しました
 <ul>
   <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
   <% end %>
 </ul>
<% end %>




<%= form_with model: @book do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'create Book'%>
<% end %>
